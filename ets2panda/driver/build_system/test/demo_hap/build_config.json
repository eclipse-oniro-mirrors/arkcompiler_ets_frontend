{
    "plugins": {
        "ArkUI": "${absolute_path_to_build_system}/node_modules/libarkts/arkoala-arkts/libarkts/build/src/koala-plugin"
    },

    "compileFiles": [
        "${absolute_path_to_build_system}/test/demo_hap/entry/b.ets",
        "${absolute_path_to_build_system}/test/demo_hap/entry/c.sts",
        "${absolute_path_to_build_system}/test/demo_hap/entry/d.sts",
        "${absolute_path_to_build_system}/test/demo_hap/harA/index.sts",
        "${absolute_path_to_build_system}/test/demo_hap/harB/indexB.sts"
    ],

    "packageName" : "entry",

    "buildType": "build",
    "buildMode": "Debug",
    "moduleRootPath": "${absolute_path_to_build_system}/test/demo_hap/entry/",
    "sourceRoots": ["./", "src/main1/ets"],

    "loaderOutPath": "./dist",
    "cachePath": "./dist/cache",

    "buildSdkPath": ".",

    "dependentModuleList": [
        {
            "packageName": "harA",
            "moduleName": "harA",
            "moduleType": "har",
            "modulePath": "${absolute_path_to_build_system}/test/demo_hap/harA",
            "sourceRoots": ["./"],
            "entryFile": "index.sts"
        },
        {
            "packageName": "harB",
            "moduleName": "harB",
            "moduleType": "har",
            "modulePath": "${absolute_path_to_build_system}/test/demo_hap/harB",
            "sourceRoots": ["./"],
            "entryFile": "indexB.sts"
        }
    ]
}